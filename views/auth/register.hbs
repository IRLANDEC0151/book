<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-6 login">
                <div class="login-body">
                    <div class="login-head">
                         <p>Добро пожаловать!</p>
                    </div>
                                  <div>
                      {{#if registerError}}
                          <p class="errorLogin">{{registerError}}</p>
                      {{/if}}

                   </div>
           <form action="/auth/register" method="POST">
                <div class="form-group">
                  <input
                    type="email"
                    name="email"
                    maxlength="30"
                    class="form-control"
                    value="{{dataInput.email}}"
                    placeholder="Email"
                     readonly onmouseover="this.removeAttribute('readonly')"
                    required
                  />
                </div>
             
                <div class="form-group" >
                  <input
                    type="password"
                      name="password"
                    maxlength="50"
                    minlength="8"
                    class="form-control"
                    placeholder="Пароль"
                    required
                  />
                </div>   <div class="form-group" >
                  <input
                    type="password"
                      name="confirm"
                    maxlength="50"
                    minlength="8"
                    class="form-control"
                    placeholder="Повторить пароль"
                    required
                  />
                </div> 
                <input type="hidden" name="_csrf" value="{{csrf}}" />
                <button  class="btn btn-primary login-comeIn">Регистрация</button>
              </form>
            <a class="login-foget"href="/auth/login">Уже есть аккаунт?</a>
            </div>
                </div>

            <div class="col-xl-6"></div>
        </div>
    </div>
</main>